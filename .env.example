# =======================
# STORAGE SETTINGS
# =======================
# Base directory for all container data
COMMUNE_DIR=/opt/commune/

# =======================
# USER AND SYSTEM SETTINGS
# =======================
PUID=1000
PGID=1000
TZ=Africa/Casablanca

# =======================
# DOMAIN AND DNS SETTINGS
# =======================
URL=yourdomain.duckdns.org
SUBDOMAINS=nextcloud,jellyfin
DUCKDNSTOKEN=your-duckdns-token
EMAIL=your.email@example.com

# =======================
# SSL CERTIFICATE SETTINGS
# =======================
VALIDATION=dns
DNSPLUGIN=duckdns
STAGING=false

# =======================
# APPLICATION CREDENTIALS
# =======================
ADMIN_NAME=admin
ADMIN_PASSWORD=your-admin-password

# =======================
# DATABASE SETTINGS
# =======================
DB_ROOT_PASSWORD=your-mysql-root-password
DB_NC_PASSWORD=your-mysql-nc-password
DB_NAME=nextcloud
DB_USER=nextcloud

# =======================
# REDIS SETTINGS
# =======================
REDIS_PASSWORD=your-redis-password

# =======================
# SECURITY SETTINGS
# =======================
TRUSTED_DOMAINS=yourdomain.duckdns.org,nextcloud.yourdomain.duckdns.org,jellyfin.yourdomain.duckdns.org

# =======================
# JELLYFIN SETTINGS
# =======================
# Optional: helps with reverse proxy access
JELLYFIN_P_S_URL=https://yourdomain.duckdns.org/jellyfin
